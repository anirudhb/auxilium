{
  "description": "Rewrites selected text using AI",
  "manifest_version": 3,
  "name": "Auxilium Rewriter",
  "version": "1.0.0",
  "homepage_url": "https://github.com/anirudhb/auxilium",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "auxilium-rewriter@anirudhb"
    }
  }
}
